{
  "name": "@codemk/search-mcp",
  "version": "1.0.0",
  "description": "MCP server for Google Search integration with AI applications",
  "main": "dist/index.js",
  "bin": {
    "search-mcp": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "README.zh-CN.md",
    "MCP_GUIDE.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:mcp": "node dist/mcp-server.js",
    "dev": "ts-node src/index.ts",
    "dev:mcp": "ts-node src/mcp-server.ts",
    "dev:watch": "nodemon --exec ts-node src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "search",
    "google-search",
    "web-search",
    "ai",
    "claude",
    "playwright",
    "automation"
  ],
  "author": "CodeMK",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/CodeMK/search-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/CodeMK/search-mcp/issues"
  },
  "homepage": "https://github.com/CodeMK/search-mcp#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "playwright": "^1.40.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
